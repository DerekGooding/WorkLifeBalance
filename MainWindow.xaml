<Window x:Class="WorkLifeBalance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkLifeBalance"
        mc:Ignorable="d"
        Background="Transparent"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="MainWindow" Height="140" Width="220">
    
    <Border CornerRadius="15"
            MouseDown="MoveWindow"
            Background="#028090">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    Margin="4"
                    Background="#E4FDE1"
                    CornerRadius="12">
            
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="55"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical"
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Text="Worked Amount:"
                                   FontSize="18"
                                   TextAlignment="Center"/>
                        <TextBlock Text="00.00.00"
                                   Name="ElapsedWorkT"
                                   FontSize="15"
                                   TextAlignment="Center"/>
                        <TextBlock Text="Break Amount"
                                   TextAlignment="Center"
                                   FontSize="18"/>
                        <TextBlock Text="00.00.00"
                                   Name="ElapsedBreakT"
                                   FontSize="15"
                                   TextAlignment="Center"/>
                    </StackPanel>
                    <Button Grid.Column="1"
                            Width="50"
                            Height="50" 
                            Click="ToggleRecording">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="LightBlue" CornerRadius="50">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Ellipse Grid.Column="1"
                             Width="30"
                             Name="RecordIndicatorE"
                             Height="30"
                             Fill="Purple">
                        
                    </Ellipse>
                </Grid>
            </Border>
        <StackPanel Orientation="Vertical"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Text="Date: 00/00/0000"
                       TextAlignment="Center"
                       Name="DateT"
                       FontSize="15"
                       Foreground="White"/>

            </StackPanel>
    </Grid>
    </Border>
</Window>
