<Window x:Class="WorkLifeBalance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkLifeBalance"
        mc:Ignorable="d"
        Background="Transparent"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="WorkLifeBalance" Height="140" Width="220">
    
    <Border CornerRadius="15"
            MouseDown="MoveWindow"
            Background= "{Binding Source={StaticResource WLFBOceanBlue}}">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15"
                                  Name="OptionMenuVisibility"/>
                <ColumnDefinition/>
        </Grid.ColumnDefinitions>
                <Border Grid.Row="0"
                        Grid.Column="0"
                        MouseEnter="OptionMenuMouseEnter" 
                        MouseLeave="OptionMenuMouseLeave">
                
                    <Border Margin="3,10,3,10"
                            CornerRadius="5"
                            Background="{Binding Source={StaticResource WLFBBluishWhite}}">
                        <StackPanel Orientation="Vertical"
                                    Visibility="Collapsed"
                                    Name="OptionsPannel">

                        <Button Height="27"
                                Width="27"
                                Margin="0,2,0,0"
                                ToolTip="Close App"
                                Template="{Binding Source= {StaticResource RoundedBtnTemp}}"
                                Style="{Binding Source={StaticResource RedRoundedBtnHoverStyle}}" Click="CloseApp">
                            <Image Margin="1"
                                   Source="Assets/Cancel.png"/>
                        </Button>
                        <Button Height="27"
                                Width="27"
                                Margin="0,2,0,0"
                                ToolTip="Options"
                                Template="{Binding Source= {StaticResource RoundedBtnTemp}}"
                                Style="{Binding Source={StaticResource RoundedBtnHoverStyle}}" Click="Options">
                            <Image Margin="2"
                                   Source="Assets/Settings.png"/>
                        </Button>
                        <Button Height="27"
                                Width="27"
                                Margin="0,2,0,0"
                                ToolTip="View Data"
                                Template="{Binding Source= {StaticResource RoundedBtnTemp}}"
                                Style="{Binding Source={StaticResource RoundedBtnHoverStyle}}" Click="ViewData">
                            <Image Margin="2"
                                   Source="Assets/DataSheet.png"/>
                        </Button>

                    </StackPanel>
                        
                    </Border>
                </Border>
            <Border Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,4,4,4"
                    Background ="{Binding Source = {StaticResource WLFBBluishWhite}}"
                    CornerRadius="12">
            
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="48"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical"
                                Grid.Column="0"
                                Margin="0,0,-10,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Text="Worked Amount:"
                                   FontSize="18"
                                   TextAlignment="Center"/>
                        <TextBlock Text="00.00.00"
                                   Name="ElapsedWorkT"
                                   FontSize="15"
                                   TextAlignment="Center"/>
                        <TextBlock Text="Break Amount"
                                   TextAlignment="Center"
                                   FontSize="18"/>
                        <TextBlock Text="00.00.00"
                                   Name="ElapsedBreakT"
                                   FontSize="15"
                                   TextAlignment="Center"/>
                    </StackPanel>
                    <Button Grid.Column="1"
                            Width="45"
                            Margin="-10,0,0,0"
                            Name="ToggleBtn"
                            ToolTip="Toggle Work/Rest"
                            Height="45" 
                            Click="ToggleRecording"
                            Template="{Binding Source={StaticResource RoundedBtnTemp}}"
                            Style="{Binding Source={StaticResource RoundedBtnStyle}}" 
                            MouseEnter="ToggleRecordingBtnMouseEnter" 
                            MouseLeave="ToggleRecordingBtnMouseLeave">
                        <Image Margin="5"
                               Source="Assets/Rest.png"
                               Name="ToggleRecordingImage"/>
                    </Button>
                </Grid>
            </Border>
            <StackPanel Orientation="Vertical"
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

            <TextBlock Text="Today: 00/00/0000"
                       TextAlignment="Center"
                       Name="DateT"
                       FontWeight="Bold"
                       FontSize="15"
                       Foreground="White"/>

            </StackPanel>
    </Grid>
    </Border>
</Window>
